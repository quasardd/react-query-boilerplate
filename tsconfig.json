{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
    "types": ["node"],
    "declaration": true,
    "outDir": "./dist/esm",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
